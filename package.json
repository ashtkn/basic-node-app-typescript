{
  "name": "basic-node-app-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "tsc": "tsc",
    "type-check": "tsc --noEmit",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore src",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "clean": "rimraf dist/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "npm run format"
    ],
    "src/**/*.{js,ts}": [
      "npm run lint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashtkn/basic-node-app-typescript.git"
  },
  "author": "Asahi Takenouchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashtkn/basic-node-app-typescript/issues"
  },
  "homepage": "https://github.com/ashtkn/basic-node-app-typescript#readme",
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  }
}
