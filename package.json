{
  "name": "basic-node-app-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore src",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "clean": "rimraf dist/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,html,json}": [
      "prettier --write 'src/**/*.{js,ts}'"
    ],
    "src/**/*.{js,ts}": [
      "eslint --ext .js,.ts --ignore-path .gitignore src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashtkn/basic-node-app-typescript.git"
  },
  "author": "Asahi Takenouchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashtkn/basic-node-app-typescript/issues"
  },
  "homepage": "https://github.com/ashtkn/basic-node-app-typescript#readme",
  "devDependencies": {
    "@types/node": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "^4.0.2"
  }
}
