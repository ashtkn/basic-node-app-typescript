{
  "name": "basic-node-app-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "lint": "eslint --ext .ts,.js --ignore-path .gitignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --ext .ts,.js --ignore-path .gitignore .",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashtkn/basic-node-app-typescript.git"
  },
  "author": "Asahi Takenouchi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashtkn/basic-node-app-typescript/issues"
  },
  "homepage": "https://github.com/ashtkn/basic-node-app-typescript#readme",
  "devDependencies": {
    "@types/node": "^13.1.6",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.4",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4"
  }
}
